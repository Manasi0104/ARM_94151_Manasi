#include <stdint.h>
#include <stdio.h>
#include"gpio.h"
#include"stm32f407xx.h"


#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

#define BV(n) (1 << (n))
int main(void)
{
	led_init();
	switch_init();
	while(1)
	{
		if(switch_status())
		{
			if(GPIOD->ODR & BV(12))
				{
					GPIOD->ODR |=BV(15);
				}
				else if(GPIOD->ODR & BV(12) &&  GPIOD->ODR & BV(15))
						{
							GPIOD->ODR &= ~(BV(12)|BV(15));
						}
				else
					GPIOD->ODR |=BV(12);
		}

	}
}










